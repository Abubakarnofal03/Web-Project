               <li><a href="/admin/adminhome" id ="adminhome">HOME</a></li>
               <li class="titlehome">AUTOMOTIVE STUDIO</li>
            </ul>
        </div>
    </header>
    <!-- body section  -->
     <div>
        <div>
            <div class="leftcenter">
                <img src="/Images/logo.png" alt="logo">
            </div>
            <h2>Find A  Best Bikes To Purchase</h2>
         </div>
     </div>

      <!-- display products -->
      <br>
     <h3>BIKE DETAILS</h3>
     <br>
     <div class="displaycenter">
        <table>
            <thead>
                <tr>
                    <TH>ID</TH>
                    <TH>IMAGE</TH>
                    <TH>BIKE NAME</TH>
                    <TH>COMPNAY NAME</TH>
                    <TH>MODEL</TH>
                    <TH>PRICE</TH>
                    <TH>PHONE NUMBER</TH>
                </tr>
            </thead>
            
            <tbody>
                <% Bikesdata.forEach(function(Car) { %>
                    <tr>
                        <td class="productid"><%= Car.id %></td>
                        <td class="productblocks"><img class="displayimg" src="<%= Car.picture %>" alt="bike_di_tasver"></td>
                        <td class="productblocks"><%= Car.bikeName %></td>
                        <td class="productblocks"><%= Car.companyName %></td>
                        <td class="productblocks"><%= Car.model %></td>
                        <td class="productblocks"><%= Car.price %></td>
                        <td class="productblocks"><%= Car.phonenumber %></td>
                    </tr>
                    <% }); %>
            </tbody>
          </table>
     </div>
     

    <!--end body section  -->
