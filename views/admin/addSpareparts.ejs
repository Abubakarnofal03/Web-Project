    <script>
        
        const form = document.forms['addsparepartsform'];

        // Add a submit event listener to the form
        form.addEventListener('submit', function(event) {
          // Prevent the form from submitting
          event.preventDefault();
        
          // Retrieve form inputs
          const bikeName = form.elements['mysparepartNameID'].value;
          const companyName = form.elements['mycompanyNameID'].value;
          const userPhone = form.elements['userPhone'].value;
          const color = form.elements['mycolorID'].value;
          const model = form.elements['myModel'].value;
          const price = form.elements['myprice'].value;
        
          // Regular expressions for validation
          const phoneRegex = /^03\d{9}$/;
          const emptyRegex = /^\s*$/;
          const alphabetRegex = /^[a-zA-Z]+$/; // Only alphabets regex
        
          // Check if any field is empty
          if (emptyRegex.test(bikeName) || emptyRegex.test(companyName) || emptyRegex.test(userPhone) || emptyRegex.test(color) || emptyRegex.test(model) || emptyRegex.test(price)) {
            alert('Please fill in all fields.');
            return;
          }
        
          // Check if bikeName contains only alphabets
          if (!alphabetRegex.test(bikeName)) {
            alert('Please enter alphabets only for the bike name.');
            return;
          }
        
          // Check if companyName contains only alphabets
          if (!alphabetRegex.test(companyName)) {
            alert('Please enter alphabets only for the company name.');
            return;
          }
        
          // Check if color contains only alphabets
          if (!alphabetRegex.test(color)) {
            alert('Please enter alphabets only for the color.');
            return;
          }
        
          // Check if userPhone is in the correct format and length
          if (!phoneRegex.test(userPhone)) {
            alert('Please enter a valid phone number in the format 03XXXXXXXXX.');
            return;
          }
        
          // If all validations pass, submit the form
          form.submit();
        });

