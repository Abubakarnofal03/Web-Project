        // Get the form element
const form = document.forms['updateuserform'];

// Add a submit event listener to the form
form.addEventListener('submit', function(event) {
  // Prevent the form from submitting
  event.preventDefault();

  // Retrieve form inputs
  const userId = form.elements['userid'].value;
  const userName = form.elements['userName'].value;
  const userEmail = form.elements['userEmail'].value;
  const userPhone = form.elements['userPhone'].value;
  const userPassword = form.elements['userPassword'].value;

  // Regular expressions for validation
  const phoneRegex = /^03\d{9}$/;
  const emailRegex =/^[a-zA-Z0-9._%+-]+@(gmail\.com|yahoo\.com)$/;
  const emptyRegex = /^\s*$/;

  // Check if any field is empty
  if (emptyRegex.test(userId) || emptyRegex.test(userName) || emptyRegex.test(userEmail) || emptyRegex.test(userPhone) || emptyRegex.test(userPassword)) {
    alert('Please fill in all fields.');
    return;
  }

  // Check if userPhone is in the correct format and length
  if (!phoneRegex.test(userPhone)) {
    alert('Please enter a valid phone number in the format 03XXXXXXXXX.');
    return;
  }

  // Check if userEmail is in the correct format
  if (!emailRegex.test(userEmail)) {
    alert('Please enter a valid email address.');
    return;
  }

  // If all validations pass, submit the form
  form.submit();
});
