                // Get the form element
        const form = document.forms['updateBikeform'];

        // Add a submit event listener to the form
        form.addEventListener('submit', function(event) {
          // Prevent the form from submitting
          event.preventDefault();
        
          // Retrieve form inputs
          const bikeId = form.elements['bikeid'].value;
          const bikeName = form.elements['mybikeNameID'].value;
          const companyName = form.elements['mycompanyNameID'].value;
          const color = form.elements['mycolorID'].value;
          const model = form.elements['myModel'].value;
          const price = form.elements['myprice'].value;
          const phoneNumber = form.elements['phonenumber'].value;
          
          // Regular expressions for validation
          const phoneRegex = /^03\d{9}$/;
          const emptyRegex = /^\s*$/;
        
          // Check if any field is empty
          if (emptyRegex.test(bikeId) || emptyRegex.test(bikeName) || emptyRegex.test(companyName) || emptyRegex.test(color) || emptyRegex.test(model) || emptyRegex.test(price) || emptyRegex.test(phoneNumber)) {
            alert('Please fill in all fields.');
            return;
          }
      
          // Check if phoneNumber is in the correct format and length
          if (!phoneRegex.test(phoneNumber)) {
            alert('Please enter a valid phone number in the format 03XXXXXXXXX.');
            return;
          }
      
          // If all validations pass, submit the form
          form.submit();
        });


        
