<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Automotive Studio</title>
    <link rel="icon" type="image/x-icon" href="/Images/favicon.ico">
    
    <link rel="icon" type="image/x-icon" href="/Images/favicon.ico">
    
    <link rel="stylesheet" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Cairo' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Aclonica' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Caveat' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Bai Jamjuree' rel='stylesheet'>
</head>

<body>
    <header>
        <div class="headerclass">

            <ul class="navbar">
                <li><a href="/landing" id="landingpage">LOG OUT</a></li>
                <li><a href="/user/ContactUs">CONTACT US</a></li>
                <li><a href="/user/AboutUs">ABOUT US</a></li>
                <li><a href="/user/Spareparts" id="sparepartspage">SPARE PARTS</a></li>
                <li><a href="/user/Bikes"  id="bikespage">BIKES</a></li>
                <li><a href="/user/Cars" id="carspage">CARS</a></li>
                <li><a href="/user/userhome" id ="adminhome">HOME</a></li>

               <li class="titlehome">AUTOMOTIVE STUDIO</li>
            </ul>
        </div>
    </header>
    <!-- body section  -->
     <div>
        <div>
            <div class="leftcenter">
                <img src="/Images/logo.png" alt="logo">
            </div>
            <h2>Find A  Best Spare Parts To Purchase</h2>
         </div>
     </div>
     
      <!-- display products -->
      <br>
     <h3>SPARE PARTS DETAILS</h3>
     <br>
     <div class="displaycenter">
        <table>
            <thead>
                <tr>
                    <TH>ID</TH>
                    <TH>IMAGE</TH>
                    <TH>SPARE PART NAME</TH>
                    <TH>PART OF</TH>
                    <TH>MODEL</TH>
                    <TH>PRICE</TH>
                    <TH>PHONE NUMBER</TH>
                </tr>
            </thead>
            
            <tbody>
                <% SPdata.forEach(function(Car) { %>
                    <tr>
                        <% console.log(Car.imagePath); %>
                        <% console.log(Car.imageHERE); %>
                        <td class="productid"><%= Car.id %></td>
                        <td class="productblocks"><img class="displayimg" src="<%= Car.picture %>" alt="spare_part_di_tasver"></td>
                        <td class="productblocks"><%= Car.Name %></td>
                        <td class="productblocks"><%= Car.typeOfPart %></td>
                        <td class="productblocks"><%= Car.model %></td>
                        <td class="productblocks"><%= Car.picePkr %></td>
                        <td class="productblocks"><%= Car.phonenumber %></td>
                    </tr>
                    <% }); %>
            </tbody>
          </table>
     </div>
     



    <!--end body section  -->
    <footer>
        <p>Â© All Rights Reserved. Design by <a href="#"> Tahir </a></p>
    </footer>


    <script>
        const logout = document.getElementById("landingpage");
        const sparepartspage = document.getElementById("sparepartspage");
        const carspage = document.getElementById("carspage");
        const bikespage = document.getElementById("bikespage");
        const homepage = document.getElementById("adminhome");
        const userpage = document.getElementById("userpage");
        const feedbackpage = document.getElementById("feedbackpage");

        homepage.addEventListener("click", () => {
            location.href = "/user/userhome";
        })
        sparepartspage.addEventListener("click", () => {
            location.href = "/user/Spareparts";
        })
        
        bikespage.addEventListener("click", () =>{
             location.href ="/user/Bikes";
        })

        carspage.addEventListener("click", () =>{
             location.href ="/user/Cars";
        })

        userpage.addEventListener("click", () =>{
             location.href ="/user/Users";
        })

        feedbackpage.addEventListener("click", () =>{
             location.href ="/user/Feedbacks";
        })

        const addcars = document.getElementById("addcarspage");
        const addbikes = document.getElementById("addsparepartspage");
        const addspareparts = document.getElementById("addbikespage");



        addbikes.addEventListener("click", () => {
            location.href = "/user/addbikes";
        })
        addspareparts.addEventListener("click", () => {
            location.href = "/user/addspareparts";
        })
        addcars.addEventListener("click", () =>{
             location.href ="/user/addcars";
        })

        const filercarsbyid = document.getElementById("filercarsbyid");
        const filtercarsbyprice = document.getElementById("filtercarsbyprice");
        const filterbikesbyprice = document.getElementById("filterbikesbyprice");
        const filterbikebyid = document.getElementById("filterbikebyid");
        const filtersparepartbyid = document.getElementById("filtersparepartbyid");
        const filtersparepartbyprice = document.getElementById("filtersparepartbyprice");

        filercarsbyid.addEventListener("click", () => {
            location.href = "/user/retrivecarsbyid";
        })
        filtercarsbyprice.addEventListener("click", () => {
            location.href = "/user/searchCarsbyPrice";
        })
        filterbikesbyprice.addEventListener("click", () =>{
             location.href ="/user/searchBikesbyPrice";
        })
        filterbikebyid.addEventListener("click", () =>{
             location.href ="/user/retrivebikesbyid";
        })
        filtersparepartbyid.addEventListener("click", () =>{
             location.href ="/user/retrivesparepartsbyid";
        })
        filtersparepartbyprice.addEventListener("click", () =>{
             location.href ="/user/searchSparePartsbyPrice";
        })

    </script>
</body>

</html>