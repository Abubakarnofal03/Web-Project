<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Automotive Studio</title>
    <link rel="icon" type="image/x-icon" href="/Images/favicon.ico">

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            background-color: #141414;
        }

        .container {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -60%);
        }

        .container h1 {
            color: white;
            font-size: 53.76px;
            font-weight: normal;
            margin: 36px;
        }

        .cards {
            width: 40rem;
            display: flex;
            justify-content: space-evenly;
        }

        .roleCard {
            height: 154px;
            width: 154px;
            margin: 11px;
            border-radius: 4px;
        }

        .adminRoleCard {
            background: url("/images/resources/adminCardPic.jpg") no-repeat center center/cover;
        }

        .userRoleCard {
            background: url("/images/resources/userCardPic.png") no-repeat center center/cover;
        }

        .profile-name {
            text-decoration: none;
            text-align: center;
            font-size: 20px;
            color: #8c8c8c;
        }

        .btn {
            margin-top: 6rem;
        }

        .backBtn {
            text-decoration: none;
            color: #8c8c8c;
            border: 1px solid #808080;
            padding: 9px 27px;
        }

        .roleCard:hover,
        .backBtn:hover {
            color: white;
            border: 2px solid white;
        }

        .profile-name:hover {
            color: white;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Who's There?</h1>
        <div class="cards">
            <div class="profile">
                <div class="roleCard adminRoleCard" id="adminCard"></div>
                <a href="/admin/signIn" class="profile-name">Admin</a>
            </div>
            <div class="profile">
                <div class="roleCard userRoleCard" id="userCard"></div>
                <a href="/user/signIn" class="profile-name">User</a>
            </div>
        </div>
        <div class="btn">
            <a href="/landing" class="backBtn">Go Back</a>
        </div>
    </div>

    <script>

        const adminRoleCard = document.getElementById("adminCard");
        const userRoleCard = document.getElementById("userCard");
        const back = document.getElementById("btn");

        adminRoleCard.addEventListener("click", () => {
            location.href = "/admin/signIn";
        })
        userRoleCard.addEventListener("click", () => {
            location.href = "/user/signIn";
        })
         back.addEventListener("click", () =>{
             location.href ='/landing'
        })

    </script>
</body>

</html>